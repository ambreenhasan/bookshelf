<div class="review-container">

  <% @reviewed_book.each do |book| %>
  <img src="<%= book.book_cover %>"><br>
  <%= book.title %><br>
  <%= book.author %><br>
  <% end %><br>

  <% @reviews.each do |review| %>
  <%= review.book_review %>
  <%= review.time_difference %>
  <% end %><br>

  <% @reviewed_user.each do |user| %>
  by <%= user.name %>
  <% end %><br>
</div>


<div class="review-table">
<table class="table">
  <thead>
    <tr>
      <th>Title</th>
      <th>Author</th>
      <th>Review</th>
      <th>Reviewer</th>
      <th>Time</th>
    </tr>
  </thead>
  <tbody class="active">
    <td></td>

  </tbody>
</table>
</div>