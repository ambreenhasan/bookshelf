  </ul>

<div>
  <div class="completed">
    <% current_user.book_ownerships.each do |books| %>
    <% if books.completed == true %>
    <img width="200" height="300" src="http://livethroughbooks.files.wordpress.com/2010/04/wuthering-heights.jpg">
    <% current_user.books.each do |book| %>
      <br><%= book.title %><br>
      <%= book.author %> <br>
      Current Page: <%= current_user.book_ownerships.first.current_page %> <br>
      <% end %>
      <% end %>
      <% end %>
  </div>

</div>





